<h1>Add/Remove Collaborators</h1>

<ul class="list-group">

  
<% User.all.each do |user| %>
<li class="list-group-item">
  <%= user.email %> -
  <% if @wiki.users.include?(user) == false %>
  <%= link_to "Add", wiki_collaborators_path, method: :post, class: 'btn btn-success' %>
  <% else %>
  <%= link_to "Remove", wiki_collaborators_path(@wiki), method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to remove this collaborator?'} %>
  <% end %>
</li>
<% end %>
</ul>
